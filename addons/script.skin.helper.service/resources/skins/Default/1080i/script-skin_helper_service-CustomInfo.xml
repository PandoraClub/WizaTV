<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">5</defaultcontrol>
    <onunload>ClearProperty(AdditionalInfo)</onunload>
    <controls>
	
		<!--fake list used as container -->
		<!-- use Container(999).ListItem to get all info -->
		<!-- all normal listitem properties will be available -->
        <!-- Also, all skinhelper window props will be available -->
        <!-- If tvshow content, nextaired addon props are also available -->
        <!-- ListItem.Property(type) will return the type: e.g. movie, tvshow, episode -->
		<control type="list" id="999">
            <posx>630</posx>
            <posy>0</posy>
            <itemlayout />
            <focusedlayout />
		</control>

        <control type="group">
			<animation type="WindowOpen">
				<effect type="slide" start="1200" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="1200" time="250" tween="cubic" easing="inout" />
			</animation>
            <!--Panel-->
            <control type="image">
                <posx>630</posx>
                <posy>0</posy>
                <width>1290</width>
                <height>1080</height>
				<texture border="15">bgpanel.png</texture>
				<animation effect="fade" reversible="false" end="95" time="0" condition="true">Conditional</animation>
			<colordiffuse>FF1b1b1b</colordiffuse>
            </control>
						
           <!--Header-->
            <control type="label">
                <description>Heading</description>
                <posx>700</posx>
                <posy>10</posy>
                <width>1200</width>
				<font>font35_title</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
                <align>left</align>
				<height>100</height>
				<label>$INFO[Container(999).ListItem.Label]</label>
            </control>
			<!-- subtitle -->
			<control type="label" id="189">
				<posx>700</posx>
				<posy>100</posy>
				<width>800</width>
				<align>left</align>
				<textcolor>white</textcolor>
				<label>$INFO[Container(999).ListItem.Tagline]</label>
            </control>
					
			<control type="image">
				<posx>680</posx>
                <posy>220</posy>
				<width>800</width>
				<height>260</height>
				<texture border="5">inner.png</texture>
			</control>
			
			<!--Icon-->
            <control type="image">
                <right>60</right>
                <posy>20</posy>
                <width>350</width>
                <height>460</height>
                <fadetime>800</fadetime>
                <aspectratio align="right" aligny="bottom">keep</aspectratio>
				<texture>$INFO[Container(999).ListItem.Art(poster)]</texture>
            </control>
			
            <control type="grouplist">
                <posx>680</posx>
                <posy>220</posy>
				<control type="group">
					<height>60</height>
					<control type="label">
						<description>Director</description>
						<posx>20</posx>
						<width>230</width>
						<height>60</height>
						<align>left</align>
						<label>$LOCALIZE[20339]:</label>
						<textcolor>white</textcolor>
						<visible>!StringCompare(Container(999).ListItem.Property(type),tvshow)</visible>
					</control>
					<control type="label">
						<description>Studio</description>
						<posx>20</posx>
						<width>230</width>
						<height>60</height>
						<align>left</align>
						<label>$LOCALIZE[572]:</label>
						<textcolor>white</textcolor>
						<visible>StringCompare(Container(999).ListItem.Property(type),tvshow)</visible>
					</control>
					<control type="label">
						<width>500</width>
						<posx>260</posx>
						<height>60</height>
						<align>left</align>
						<textcolor>white</textcolor>
						<label>$INFO[Container(999).ListItem.Director]</label>
						<visible>!StringCompare(Container(999).ListItem.Property(type),tvshow)</visible>
					</control>
					<control type="label">
						<width>500</width>
						<posx>260</posx>
						<height>60</height>
						<align>left</align>
						<textcolor>white</textcolor>
						<label>$INFO[Container(999).ListItem.Studio]</label>
						<visible>StringCompare(Container(999).ListItem.Property(type),tvshow)</visible>
					</control>
					<control type="image">
						<width>800</width>
						<height>60</height>
						<texture>separator.png</texture>
					</control>
				</control>
				
				<control type="group">
					<height>60</height>
					<visible>!StringCompare(Container(999).ListItem.Property(type),episode)</visible>
					<control type="label">
						<description>Genre</description>
						<posx>20</posx>
						<width>230</width>
						<height>60</height>
						<align>left</align>
						<label>$LOCALIZE[515]:</label>
						<textcolor>white</textcolor>
					</control>
					<control type="label">
						<width>500</width>
						<posx>260</posx>
						<height>60</height>
						<align>left</align>
						<label>$INFO[Container(999).ListItem.Genre]</label>
						<textcolor>white</textcolor>
					</control>
					<control type="image">
						<width>800</width>
						<height>60</height>
						<texture>separator.png</texture>
					</control>
				</control>
				
				<control type="group">
					<height>60</height>
					<control type="label">
						<description>Year</description>
						<posx>20</posx>
						<width>230</width>
						<height>60</height>
						<align>left</align>
						<label>$LOCALIZE[562]:</label>
						<textcolor>white</textcolor>
						<visible>StringCompare(Container(999).ListItem.Property(type),movie)</visible>
					</control>
					<control type="label">
						<description>First Aired</description>
						<posx>20</posx>
						<width>230</width>
						<height>60</height>
						<align>left</align>
						<label>$LOCALIZE[20416]:</label>
						<textcolor>white</textcolor>
						<visible>!StringCompare(Container(999).ListItem.Property(type),movie)</visible>
					</control>
					<control type="label">
						<width>500</width>
						<posx>260</posx>
						<height>60</height>
						<align>left</align>
						<label>$INFO[Container(999).ListItem.Year]</label>
						<textcolor>white</textcolor>
						<visible>StringCompare(Container(999).ListItem.Property(type),movie)</visible>
					</control>
					<control type="label">
						<width>500</width>
						<posx>260</posx>
						<height>60</height>
						<align>left</align>
						<label>$INFO[Container(999).ListItem.Premiered]</label>
						<textcolor>white</textcolor>
						<visible>!StringCompare(Container(999).ListItem.Property(type),movie)</visible>
					</control>
					<control type="image">
						<width>800</width>
						<height>60</height>
						<texture>separator.png</texture>
					</control>
				</control>
				
				<control type="group">
					<height>60</height>
					<control type="label">
						<description>Rating</description>
						<posx>20</posx>
						<width>230</width>
						<height>60</height>
						<align>left</align>
						<label>$LOCALIZE[563]:</label>
						<textcolor>white</textcolor>
					</control>
					<control type="label">
						<width>500</width>
						<posx>260</posx>
						<height>60</height>
						<align>left</align>
						<textcolor>white</textcolor>
						<label>$INFO[Container(999).ListItem.Rating]</label>
					</control>
				</control>
            </control>
            <control type="image">
                <posx>680</posx>
                <posy>486</posy>
                <width>1200</width>
                <height>430</height>
                <texture border="5">inner.png</texture>
            </control>
            <control type="textbox">
                <description>Plot</description>
                <posx>700</posx>
                <posy>506</posy>
                <width>1160</width>
                <height>388</height>
                <align>justify</align>
                <pagecontrol>60</pagecontrol>
                <label fallback="19055">$INFO[Container(999).ListItem.Plot]</label>
				<textcolor>white</textcolor>
                <visible>IsEmpty(Window.Property(AdditionalInfo))</visible>
            </control>
            
            <!-- cast list -->
            <control type="list" id="998">
                <description>Cast</description>
                <posx>700</posx>
                <posy>506</posy>
                <width>1160</width>
                <height>388</height>
                <ondown>9000</ondown>
                <onleft>9000</onleft>
                <onright>9000</onright>
                <orientation>vertical</orientation>
                <scrolltime>200</scrolltime>
                <visible>StringCompare(Window.Property(AdditionalInfo),cast)</visible>
                <itemlayout height="60">
                    <control type="label">
                        <posx>0</posx>
                        <width>810</width>
                        <textcolor>aaffffff</textcolor>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout height="60">
                    <control type="label">
                        <posx>0</posx>
                        <width>810</width>
                        <textcolor>ffffffff</textcolor>
                        <label>[B]$INFO[ListItem.Label][/B]</label>
                    </control>
                </focusedlayout>
            </control>
            
            <!-- similar list -->
            <control type="list" id="997">
                <description>Similar Media</description>
                <posx>700</posx>
                <posy>506</posy>
                <width>1160</width>
                <height>388</height>
                <ondown>9000</ondown>
                <onleft>9000</onleft>
                <onright>9000</onright>
                <orientation>vertical</orientation>
                <scrolltime>200</scrolltime>
                <visible>StringCompare(Window.Property(AdditionalInfo),similar)</visible>
                <itemlayout height="60">
                    <control type="label">
                        <posx>0</posx>
                        <width>810</width>
                        <textcolor>aaffffff</textcolor>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout height="60">
                    <control type="label">
                        <posx>0</posx>
                        <width>810</width>
                        <textcolor>ffffffff</textcolor>
                        <label>[B]$INFO[ListItem.Label][/B]</label>
                    </control>
                </focusedlayout>
            </control>
            
			<!--Button Group-->
            <control type="grouplist" id="9000">
                <posx>680</posx>
                <posy>940</posy>
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
                <defaultcontrol>5</defaultcontrol>
				<onup>50</onup>
				<control type="button" id="5">
                    <!--Play-->
                    <width>290</width>
                    <height>80</height>
                    <align>center</align>
                    <label>208</label>
					<textcolor>white</textcolor>
                </control>
                <control type="button" id="6">
                    <!--Trailer-->
                    <width>280</width>
                    <height>80</height>
                    <align>center</align>
                    <label>20410</label>
					<textcolor>white</textcolor>
					<onclick>PlayMedia($ESCINFO[Container(999).ListItem.Trailer])</onclick>
                    <visible>!IsEmpty(Container(999).ListItem.Trailer)</visible>
                </control>
                <control type="button" id="7">
                    <!--Cast-->
                    <width>280</width>
                    <height>80</height>
                    <align>center</align>
                    <label>206</label>
					<textcolor>white</textcolor>
                    <onup>998</onup>
					<onclick>SetProperty(AdditionalInfo, cast)</onclick>
                    <visible>IntegerGreaterThan(Container(998).NumItems,0)</visible>
                </control>
                <control type="button" id="8">
                    <!--Similar Media-->
                    <width>280</width>
                    <height>80</height>
                    <align>center</align>
                    <label>Similar</label>
                    <onup>997</onup>
					<textcolor>white</textcolor>
					<onclick>SetProperty(AdditionalInfo, similar)</onclick>
                    <visible>IntegerGreaterThan(Container(997).NumItems,0)</visible>
                </control>
            </control>
        </control>
    </controls>
</window>