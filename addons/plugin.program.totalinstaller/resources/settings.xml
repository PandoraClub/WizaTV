		<setting id="adult" type="bool" label="Enable XXX Content[CR]" default="false"/>
		<setting id="enablekeyword" type="bool" label="Enable my own keyword[CR]" default="false"/>
		<setting id="keywordname" label="Keyword Name" type="text" default="" visible="true"  enable="!eq(-1,false)"/>
		<setting id="keywordpath" label="Keyword URL (e.g.http://urlshortbot.com/noobs)" type="text" default="" visible="true"   enable="!eq(-2,false)"/>
