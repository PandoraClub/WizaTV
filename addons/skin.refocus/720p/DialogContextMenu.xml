<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>1000</defaultcontrol>
	<include>transition_Dialog</include>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
		<origin x="485" y="100" />
	</coordinates>
	<controls>
		<control type="image" id="999">
			<width>310</width>
			<height>536</height>
			<include>dialog_Menu</include>
		</control>
		<control type="image">
			<left>4</left>
			<top>18</top>
			<width>302</width>
			<include>dialog_Separator</include>
		</control>
		<control type="grouplist" id="996">
			<left>4</left>
			<top>18</top>
			<width>302</width>
			<height min="40" max="500">auto</height>
			<itemgap>0</itemgap>
			<!--YouTube-->
			<control type="button" id="2000">
				<width>302</width>
				<label>$LOCALIZE[31609]</label>
				<include>dialog_ControlCommons</include>
				<onclick>SetProperty(extType,thumbnail,Home)</onclick>
				<onclick>SetProperty(extContent,YouTube,Home)</onclick>
				<onclick condition="Container.Content(albums) | Container.Content(songs)">SetProperty(extQuery,$INFO[ListItem.Artist] $INFO[ListItem.Label],Home)</onclick>
				<onclick condition="Container.Content(artists) | Container.Content(actors) | Container.Content(directors) | Container.Content(movies) | Container.Content(tvshows)">SetProperty(extQuery,$INFO[ListItem.Label],Home)</onclick>
				<onclick>ActivateWindow(1140)</onclick>
				<visible>System.HasAddon(script.extendedinfo)</visible>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(albums) | Container.Content(songs) | Container.Content(artists) | Container.Content(actors) | Container.Content(directors)</visible>
			</control>
			<!--trailer-->
			<control type="button" id="2002">
				<width>302</width>
				<label>$LOCALIZE[20410]</label>
				<onclick>PlayMedia($ESCINFO[ListItem.Trailer])</onclick>
				<include>dialog_ControlCommons</include>
				<visible>Container.Content(movies) + !IsEmpty(ListItem.Trailer)</visible>
			</control>
			<!--actor information-->
			<control type="button" id="2009">
				<width>302</width>
				<include>dialog_ControlCommons</include>
				<label>$ADDON[script.extendedinfo 32009]</label>
				<visible>Container.Content(actors) | Container.Content(directors)</visible>
				<onclick condition="Container.Content(actors) | Container.Content(directors)">RunScript(script.extendedinfo,info=extendedactorinfo,name=$INFO[ListItem.Label])</onclick>
			</control>
			<!--Kodi inserts buttons-->
			<control type="button" id="1000">
				<left>9</left>
				<width>335</width>
				<include>dialog_ControlCommons</include>
			</control>
		</control>
	</controls>
</window>