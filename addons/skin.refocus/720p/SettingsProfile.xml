<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">10</defaultcontrol>
	<controls>

	<!--global includes-->
		<include>global_Background</include>
		<include>global_Includes</include>
		<include>global_MenuGuide</include>

	<!--window header-->
		<include name="windowTitle">
			<param name="Label" value="$VAR[window:Title.System]"/>
		</include>
		<include name="global_Itemcount">
			<param name="InfoLabel" value="[B]$INFO[System.ProfileCount][/B] $LOCALIZE[13200], $LOCALIZE[20125] [B]$INFO[System.ProfileName][/B]"/>
		</include>

		<!--left column-->
		<control type="group" id="50">
			<left>65</left>
			<top>90</top>
			<include>toggle_Menu</include>
			<include>transition_Content</include>
			<control type="button" id="10">
				<label>$LOCALIZE[20096]</label>
				<onfocus>Skin.SetString(ProfileSettings,1)</onfocus>
				<onleft>6000</onleft>
				<onright>4</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<include>settings_Menu</include>
			</control>
			<control type="button" id="11">
				<top>45</top>
				<label>$LOCALIZE[13200]</label>
				<onfocus>Skin.SetString(ProfileSettings,2)</onfocus>
				<onleft>6000</onleft>
				<onright>2</onright>
				<onup>10</onup>
				<ondown>10</ondown>
				<include>settings_Menu</include>
			</control>
			<!--right column-->
			<control type="group">
				<left>302</left>
				<!--login-->
				<control type="group">
					<visible>Skin.String(ProfileSettings,1)</visible>
					<control type="radiobutton" id="4">
						<width>850</width>
						<height>44</height>
						<onleft>10</onleft>
						<onup>5</onup>
						<ondown>5</ondown>
						<label>$LOCALIZE[20096]</label>
						<include>settings_Radiobutton</include>
					</control>
					<!--auto login-->
					<control type="button" id="5">
						<top>45</top>
						<width>850</width>
						<height>44</height>
						<onleft>10</onleft>
						<onup>4</onup>
						<ondown>4</ondown>
						<label>$LOCALIZE[33084]</label>
						<label2>$INFO[System.ProfileAutoLogin]</label2>
						<include>settings_Listbutton</include>
						<visible>!System.HasLoginScreen</visible> 
						<enable>!Window.IsVisible(ProfileSettings) + !System.HasLoginScreen</enable> 
					</control>
				</control>
				<!--profiles-->
				<control type="list" id="2">
					<width>850</width>
					<height>600</height>
					<onleft>11</onleft>
					<onup>2</onup>
					<ondown>2</ondown>
					<visible>Skin.String(ProfileSettings,2)</visible>
					<itemlayout height="45">
						<control type="image">
							<width>850</width>
							<height>44</height>
							<texture colordiffuse="column2">colorize/70.png</texture>
						</control>
						<control type="label">
							<top>3</top>
							<width>850</width>
							<height>35</height>
							<info>ListItem.Label</info>
							<include>settings_Listbutton</include>
						</control>
						<control type="label">
							<left>845</left>
							<top>3</top>
							<width>400</width>
							<height>35</height>
							<align>right</align>
							<textcolor>Color2</textcolor>
							<info>ListItem.Label2</info>
							<include>settings_Listbutton</include>
						</control>
					</itemlayout>
					<focusedlayout height="45">
						<control type="group">
							<visible>!Control.HasFocus(2)</visible>
							<control type="image">
								<width>850</width>
								<height>44</height>
								<texture colordiffuse="column2">colorize/70.png</texture>
							</control>
							<control type="label">
								<top>3</top>
								<width>850</width>
								<height>35</height>
								<info>ListItem.Label</info>
								<include>settings_Listbutton</include>
							</control>
							<control type="label">
								<left>845</left>
								<top>3</top>
								<width>400</width>
								<height>35</height>
								<align>right</align>
								<info>ListItem.Label2</info>
								<textcolor>Color2</textcolor>
								<include>settings_Listbutton</include>
							</control>
						</control>
						<control type="group">
							<visible>Control.HasFocus(2)</visible>
							<control type="image">
								<width>850</width>
								<height>44</height>
								<texture colordiffuse="Color1">colorize/70.png</texture>
								<visible>Control.HasFocus(2)</visible>
							</control>
							<control type="label">
								<top>3</top>
								<width>850</width>
								<height>35</height>
								<info>ListItem.Label</info>
								<textcolor>Color5</textcolor>
								<include>settings_Listbutton</include>
							</control>
							<control type="label">
								<left>845</left>
								<top>3</top>
								<width>400</width>
								<height>35</height>
								<align>right</align>
								<info>ListItem.Label2</info>
								<textcolor>Color5</textcolor>
								<include>settings_Listbutton</include>
							</control>
						</control>
					</focusedlayout>
				</control>
			</control>
		</control>

		<!--menu-->
		<include>menu_Settings</include>
	</controls>
</window>