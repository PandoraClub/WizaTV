<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol>5000</defaultcontrol>
	<onunload>ClearProperty(Extinfo)</onunload>
	<controls>
		<control type="group">
			<include>screen_Dimensions</include>

			<!--background-->
			<control type="image">
				<include>screen_Dimensions</include>
				<texture background="true">$INFO[Window.Property(fanart)]</texture>
				<aspectratio>scale</aspectratio>
				<animation type="WindowOpen">
					<effect type="Fade" time="transition_Open" start="0" end="100" />
				</animation>			
				<animation type="WindowClose">
					<effect type="Fade" time="transition_Close" start="100" end="0" />
				</animation>
			</control>

			<control type="image">
				<include>screen_Dimensions</include>
				<texture background="true">overlays/base_color.png</texture>
				<colordiffuse>base_1</colordiffuse>
				<visible>IsEmpty(Window.Property(fanart))</visible>
			</control>

			<control type="group">
				<include>screen_Dimensions</include>
				<include>transition_Content</include>
				<!--main container-->
				<control type="grouplist" id="4000">
					<include>screen_Dimensions</include>
					<onright>70</onright>
					<pagecontrol>70</pagecontrol>
					<include>global_Scrolltime</include>
					<orientation>vertical</orientation>
					<itemgap>0</itemgap>
					<!--banner window-->
					<control type="group">
						<width>100%</width>
						<height>250</height>
						<control type="image">
							<width>100%</width>
							<height>200</height>
							<texture>overlays/vignette_bottom.png</texture>
							<aspectratio aligny="bottom">stretch</aspectratio>
							<visible>!IsEmpty(Window.Property(fanart))</visible>
						</control>
						<!--studio / network logos-->
						<control type="image">
							<right>40</right>
							<bottom>60</bottom>
							<width>96</width>
							<height>48</height>
							<aspectratio align="right">keep</aspectratio>
							<colordiffuse>flag_1</colordiffuse>
							<texture>$VAR[flag:Studio]</texture>
							<visible>!Container.Content(movies)</visible>
						</control>
						<control type="image">
							<right>40</right>
							<bottom>60</bottom>
							<width>128</width>
							<height>64</height>
							<aspectratio align="right">keep</aspectratio>
							<colordiffuse>flag_1</colordiffuse>
							<texture>$VAR[flag:Studio]</texture>
							<visible>Container.Content(movies)</visible>
						</control>
						<!--begin main column-->
						<control type="group">
							<left>300</left>
							<top>110</top>
							<control type="label">
								<width min="0" max="1164">auto</width>
								<label>$INFO[Window.Property(Title)]</label>
								<selectedcolor>Color1</selectedcolor>
								<include>osd_Title</include>
							</control>
							<control type="label">
								<top>28</top>
								<width>1164</width>
								<label>$INFO[Window.Property(Year)]$INFO[Window.Property(Duration), &#8226; , $LOCALIZE[31701]]$INFO[Window.Property(Genre), &#8226; ]</label>
								<font>regular_Small-U</font>
								<include>osd_Sub</include>
							</control>
							<control type="label">
								<top>50</top>
								<width min="0" max="1164">auto</width>
								<label>$INFO[Window.Property(Studio)]</label>
								<font>regular_Smaller-U</font>
								<textcolor>Color3</textcolor>
								<include>osd_Sub</include>
							</control>
						</control>

						<control type="group">
							<width>100%</width>
							<height>screen_Height</height>
							<control type="image">
								<top>200</top>	
								<width>100%</width>
								<height>520</height>	
								<aspectratio>stretch</aspectratio>
								<texture background="true">overlays/base_color.png</texture>
								<colordiffuse>base_1</colordiffuse>
								<visible>!IsEmpty(Window.Property(fanart))</visible>
							</control>
							<!--begin main content area-->
							<control type="group">
								<left>300</left>
								<top>220</top>
								<control type="grouplist" id="5000">
									<width>100%</width>
									<height>40</height>
									<itemgap>10</itemgap>
									<orientation>horizontal</orientation>
									<defaultcontrol>8</defaultcontrol>
									<!--play-->
									<control type="button" id="8">
										<label>$LOCALIZE[208]</label>
										<width>200</width>
										<visible>!IsEmpty(Window.Property(DBID)) + !StringCompare(Window.Property(Type),tvshow)</visible>
										<include>global_Button</include>
									</control>
									<!--browse-->
									<control type="button" id="120">
										<label>$LOCALIZE[1024]</label>
										<width>200</width>
										<visible>!IsEmpty(Window.Property(DBID)) + Stringcompare(Window.Property(Type),tvshow)</visible>
										<include>global_Button</include>
									</control>
									<!--set rating-->
									<control type="togglebutton" id="6001">
										<label>$LOCALIZE[38023]</label>
										<width>200</width>
										<usealttexture>!IsEmpty(Window.Property(rated))</usealttexture>
										<include>global_Button</include>
										<enable>!IsEmpty(Window.Property(tmdb_logged_in)) + [!StringCompare(Window.Property(type),season) + !StringCompare(Window.Property(type),episode)]</enable>
									</control>
									<!--add to list-->
									<control type="radiobutton" id="6005">
										<label>$ADDON[script.extendedinfo 32107]</label>
										<width>200</width>
										<include>global_Button</include>
										<include>global_Radio</include>
										<enable>!IsEmpty(Window.Property(tmdb_logged_in)) + [!StringCompare(Window.Property(type),season) + !StringCompare(Window.Property(type),episode)]</enable>
									</control>									
								</control>
								<!--plot / descriptions-->
								<control type="textbox" id="401">
									<top>70</top>
									<width>875</width>
									<height min="0" max="325">auto</height>
									<label>[B]$INFO[Window.Property(Tagline),,[CR][CR]][/B]$INFO[Window.Property(Plot),,[CR][CR]]$VAR[information:Consensus]</label>
									<include>detail_Text</include>
									<visible>!Control.IsVisible(50)</visible>
								</control>
							</control>
						</control>

						<!--begin left column-->
						<control type="group">
							<left>40</left>
							<top>40</top>
							<control type="image">
								<width>207</width>
								<height>300</height>
								<include>art_Frame-nf</include>
							</control>
							<control type="group">
								<left>7</left>
								<top>7</top>
								<control type="image">	
									<width>193</width>
									<height>286</height>
									<texture background="true">thumbs/default_Portrait.png</texture>
									<aspectratio>stretch</aspectratio>
								</control>
								<control type="image">
									<width>193</width>
									<height>286</height>
									<texture background="true">$INFO[Window.Property(thumb)]</texture>
									<aspectratio align="center" aligny="top">scale</aspectratio>
								</control>
							</control>
							<control type="textbox" id="401">
								<top>320</top>
								<width>200</width>
								<height min="0" max="300">auto</height>
								<align>right</align>
								<label>$INFO[Window.Property(Director),[B]$LOCALIZE[20339][/B][CR],[CR][CR]]$INFO[Window.Property(Writer),[B]$LOCALIZE[20417][/B][CR],[CR][CR]]$INFO[Window.Property(Cast),[B]$LOCALIZE[31505][/B][CR],[CR]]</label>
								<include>detail_Text</include>
							</control>
						</control>
					</control>		
				</control>
			</control>
		</control>
	</controls>
</window>