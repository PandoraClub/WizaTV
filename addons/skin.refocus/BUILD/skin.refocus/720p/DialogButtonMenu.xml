<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<defaultcontrol always="true">500</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="image">
			<include>screen_Dimensions</include>
			<texture background="true">colorize/50.png</texture>
			<colordiffuse>black</colordiffuse>
			<include>fadeinout</include>
		</control>
		<control type="grouplist" id="500">
			<top>0</top>
			<left>460</left>
			<width>352</width>
			<height>screen_Height</height>
			<onup>500</onup>
			<ondown>500</ondown>
			<onright>402</onright>
			<itemgap>0</itemgap>
			<align>center</align>
			<include>global_ListScroll</include>
			<include>transition_Dialog</include>
			<control type="image" id="499">
				<width>352</width>
				<height>20</height>
				<texture border="20,0,20,0">dialogs/frame/menu_top.png</texture>
			</control>
			<!--exit-->
			<control type="button" id="501">
				<width>352</width>
				<label>$LOCALIZE[13012]</label>
				<onclick>XBMC.Quit()</onclick>
				<include>dialog_MenuButton</include>
				<visible>System.ShowExitButton</visible>
			</control>
			<!--shutdown-->
			<control type="button" id="502">
				<width>352</width>
				<label>$LOCALIZE[13016]</label>
				<onclick>XBMC.Powerdown()</onclick>
				<include>dialog_MenuButton</include>
				<visible>System.CanPowerDown</visible>
			</control>
			<!--shutdown timer-->
			<control type="button" id="503">
				<width>352</width>
				<label>$LOCALIZE[20150]</label>
				<onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
				<include>dialog_MenuButton</include>
				<visible>!System.HasAlarm(shutdowntimer)</visible>
				<visible>System.CanPowerDown | System.CanSuspend | System.CanHibernate</visible>
			</control>
			<!--cancel shutdown timer-->
			<control type="button" id="504">
				<width>352</width>
				<label>$LOCALIZE[20151]</label>
				<onclick>XBMC.CancelAlarm(shutdowntimer)</onclick>
				<include>dialog_MenuButton</include>
				<visible>System.HasAlarm(shutdowntimer)</visible>
			</control>
			<!--inhibit idle shutdown-->
			<control type="button" id="505">
				<width>352</width>
				<label>$LOCALIZE[13017]</label>
				<onclick>XBMC.InhibitIdleShutdown(true)</onclick>
				<include>dialog_MenuButton</include>
				<visible>System.HasShutdown + !System.IsInhibit</visible>
			</control>
			<!--allow idle shutdown-->
			<control type="button" id="506">
				<width>352</width>
				<label>$LOCALIZE[13018]</label>
				<onclick>XBMC.InhibitIdleShutdown(false)</onclick>
				<include>dialog_MenuButton</include>
				<visible>System.HasShutdown + System.IsInhibit</visible>
			</control>
			<!--suspend-->
			<control type="button" id="507">
				<width>352</width>
				<label>$LOCALIZE[13011]</label>
				<onclick>XBMC.Suspend()</onclick>
				<include>dialog_MenuButton</include>
				<visible>System.CanSuspend</visible>
			</control>
			<!--hibernate-->
			<control type="button" id="508">
				<width>352</width>
				<label>$LOCALIZE[13010]</label>
				<onclick>XBMC.Hibernate()</onclick>
				<include>dialog_MenuButton</include>
				<visible>System.CanHibernate</visible>
			</control>
			<!--reboot-->
			<control type="button" id="509">
				<width>352</width>
				<label>$LOCALIZE[13013]</label>
				<onclick>XBMC.Reset()</onclick>
				<include>dialog_MenuButton</include>
			</control>
			<!--logoff-->		
			<control type="button" id="510">
				<width>352</width>
				<label>$LOCALIZE[20126] $INFO[System.Profilename]</label>
				<onclick>Dialog.Close(all,true)</onclick>
				<onclick>System.LogOff</onclick>
				<include>dialog_MenuButton</include>
				<visible>System.HasLoginScreen | IntegerGreaterThan(System.ProfileCount,1)</visible>
				<visible>System.Loggedon</visible>
			</control>
			<!--master mode-->
			<control type="togglebutton" id="511">
				<width>352</width>
				<label>$LOCALIZE[20046]</label>
				<altlabel>$LOCALIZE[20045]</altlabel>
				<usealttexture>!System.IsMaster</usealttexture>
				<onclick>XBMC.Mastermode</onclick>
				<include>dialog_MenuButton</include>
				<visible>System.HasLocks</visible>
			</control>
			<!--minimize-->
			<control type="button" id="512">
				<width>352</width>
				<label>$LOCALIZE[13014]</label>
				<onclick>XBMC.Minimize()</onclick>
				<include>dialog_MenuButton</include>
			</control>
			<!--settings-->
			<control type="button" id="513">
				<width>352</width>
				<label>$LOCALIZE[5]</label>
				<onclick>ActivateWindow(settings)</onclick>
				<include>dialog_MenuButton</include>
			</control>
			<control type="image" id="514">
				<width>352</width>
				<height>20</height>
				<texture border="20,0,20,0">dialogs/frame/menu_bottom.png</texture>
			</control>
		</control>
	</controls>
</window>