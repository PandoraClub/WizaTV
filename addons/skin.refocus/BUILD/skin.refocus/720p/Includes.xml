	<include name="global_Clock">
		<control type="group">
			<include>transition_Info</include>
			<include>toggle_Menu</include>
			<visible>[![Player.HasMedia + !Skin.HasSetting(mediaoverlay.disable)] | [Player.HasMedia + !IsEmpty(Window(videolibrary).Property(PlayingBackgroundMedia))]] + ![Window.IsActive(infodialog) | Window.IsActive(extendedprogressdialog) | Window.IsActive(movieinformation) | Window.IsActive(musicinformation) | Window.IsActive(weather)]</visible>
			<control type="label">
				<label>$VAR[toast:Top]</label>
				<include>toast_Top</include>
			</control>
			<control type="label">
				<label>$VAR[toast:Bottom]</label>
				<textcolor>Color2</textcolor>
				<include>toast_Bottom</include>
			</control>
			<control type="image">
				<top>15</top>
				<include>toast_Icon</include>
				<texture>$VAR[toast:Icon]</texture>
				<visible>!Player.Muted + IntegerGreaterThan(Player.Volume,0)</visible>
			</control>
		</control>
	</include>
	<include name="clock">
		<control type="group">
			<visible>![Library.IsScanningVideo | Library.IsScanningMusic | Window.IsActive(infodialog) | Control.HasFocus(9200) | Window.IsVisible(subtitlesearch)]</visible>
			<control type="label">
